#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0115,C0116,R0201,C0413


"object programming daemon"


import importlib
import os
import queue
import readline
import socket
import sys
import time
import textwrap
import threading
import _thread


sys.path.insert(0, os.getcwd())


from op import Class, Default, Object, Wd
from op import edit, keys, launch, last, locked, printable, register, save
from op.run import Bus, Command, Event, Handler, Shell, command, scandir
from opm.irc import IRC
from opm.rss import Fetcher
from opm import cmds, irc, rss


Wd.workdir = os.path.expanduser("~/.op")


fetcher = Fetcher()
bot = IRC()


def banner():
    print("OPD daemon started at %s" % time.ctime(time.time()).replace("  ", " "))
    print(printable(bot.cfg, skip="password,username,realname"))


def daemon(silent=False):
    pid = os.fork()
    if pid != 0:
        os._exit(0)
    os.setsid()
    os.umask(0)
    sis = open("/dev/null", 'r')
    os.dup2(sis.fileno(), sys.stdin.fileno())
    if silent:
        sos = open("/dev/null", 'a+')
        ses = open("/dev/null", 'a+')
        os.dup2(sos.fileno(), sys.stdout.fileno())
        os.dup2(ses.fileno(), sys.stderr.fileno())


def main():
    sys.argv[0] = "opd"
    banner()
    daemon()
    fetcher.start()
    bot.scan(cmds)
    bot.start()
    bot.wait()


if __name__ == "__main__":
    main()
