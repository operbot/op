"object programming shell"


import importlib
import inspect
import os
import readline
import signal
import sys
import termios
import threading
import time


sys.path.insert(0, os.getcwd())


starttime = time.time()


from op import Class, Db, Event, Handler, Object, Wd
from op import allobj, elapsed, keys, fntime, format, launch
from op import register, find, save, scandir, update
from op.run import from_exception 


Wd.workdir = os.path.expanduser("~/.op")


class Shell(Handler):

    def loop(self):
        while 1:
            self.handle(self.poll())

    def poll(self):
        event = Event()
        event.bot = self
        event.txt = input("> ")
        event.orig = repr(self)
        return event

    @staticmethod
    def raw(txt):
        print(txt)

    def start(self):
        launch(self.loop)

    def wait(self):
        while 1:
            time.sleep(1.0)


shl = Shell()


def importer(packagename, modulename):
    name = "%s.%s" % (packagename, modulename)
    try:
        mod = importlib.import_module(name, packagename)
        shl.scan(mod)
    except Exception as ex:
        print(from_exception(ex))


def main():
    scandir("mod", importer)
    shl.start()
    shl.wait()

 
if __name__ == "__main__":
    main()
